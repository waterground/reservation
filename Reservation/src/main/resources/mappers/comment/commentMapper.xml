<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.sjh.web.mappers.comment.CommentMapper">
	<insert id="insert">
		INSERT INTO
		comment(member_id,product_id,score,content)
		VALUES(#{memberId}, #{productId}, #{score}, #{content})
	</insert>

	<select id="select" resultType="CommentDto">
		SELECT *
		FROM comment
		WHERE id=#{id}
	</select>

	<select id="listUp" resultType="CommentDto">
		SELECT *
		FROM comment
		<where>
			<if test="productId != 0">
				AND product_id=#{productId}
			</if>
			<if test="memberId != null">
				AND member_id = #{memberId}
			</if>
		</where>
		ORDER BY date DESC
	</select>

	<delete id="delete">
		DELETE FROM comment
		WHERE id=#{id}
	</delete>

</mapper>